@model IEnumerable<Group>
@{
    ViewData["Title"] = "Groups";
    var count = 1;
}
<div class="container">
    <div class="card">
        <div class="card-header">List of Groups</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" id="dataTable">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var group in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@group.Name</td>
                                <td>
                                    <a asp-route-Id="@group.Id" class="btn btn-primary" asp-action="Details" asp-controller="Groups">Details</a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>