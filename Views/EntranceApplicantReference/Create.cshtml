@model EntranceApplicantReference

<button class="btn text-light" href="#" data-toggle="modal" data-target="#referenceModal" style="background:darkblue">Create New</button>
<!-- Logout Modal-->
<div class="modal fade" id="referenceModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Reference</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="EntranceApplicantReferences" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="EntranceApplicantID" type="hidden" />
                        <label asp-for="RefereeName" class="control-label"></label>
                        <input asp-for="RefereeName" class="form-control" />
                        <span asp-validation-for="RefereeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Institution" class="control-label"></label>
                        <input asp-for="Institution" class="form-control" />
                        <span asp-validation-for="Institution" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
