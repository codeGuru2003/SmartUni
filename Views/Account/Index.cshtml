@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<div class="container">
     <div class="card">
         <div class="card-header">List of Users</div>
         <div class="card-body">
             <div class="table-responsive">
                 <table class="table table" id="dataTable">
                     <thead>
                         <tr>
                             <th>No</th>
                             <th>Username</th>
                             <th>Email</th>
                             <th>Actions</th>
                         </tr>
                     </thead>
                     <tbody>
                        @foreach(var user in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    <a class="btn btn-primary" asp-route-Id="@user.Id" asp-action="Edit">Edit</a> |
                                    <a class="btn btn-primary" asp-route-Id="@user.Id" asp-action="Details">Details</a> |
                                    <a class="btn btn-danger" asp-route-Id="@user.Id" asp-action="Delete">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                 </table>
             </div>
         </div>
     </div>
</div>