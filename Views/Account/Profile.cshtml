@model ApplicationUser
@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h4>User Profile</h4>
        </div>
        <div class="card-body text-light" style="background:darkblue;">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <img src="~/wallpaper.jpg" class="img-thumbnail" width="100%;"/>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Username</label>
                                <input asp-for="UserName" class="form-control" disabled/>
                            </div>
                            <div class="col-sm-6">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" disabled />
                            </div>
                        </div><br />
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" disabled />
                            </div>
                            <div class="col-sm-6">
                                <label>Login Hint</label>
                                <input asp-for="LoginHint" class="form-control" disabled />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-6">
                                @await Html.PartialAsync("~/Views/Account/ChangePassword.cshtml", new ChangePasswordViewModel())
                            </div>
                            <div class="col-sm-6">
                                <form>
                                    <input type="hidden" value="@Model.Id" name="Id" />
                                    <button class="btn btn-danger form-control" disabled>Reset Password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>