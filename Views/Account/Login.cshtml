@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Elevation</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS to adjust column sizes and make the image fill the left column */
        .login-image-column {
            background-color: #f0f0f0; /* Set background color for the left column */
        }

        .login-image {
            width: 100%;
            height: 109%;
            object-fit: cover; /* Ensure the image covers the entire container */
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Image column on the left -->
            <div class="col-md-8 p-0 login-image-column">
                <!-- Larger column (8 out of 12 columns) -->
                <img src="~/wallpaper.jpg" class="img-fluid login-image" alt="Login Image">
            </div>
            <!-- Form column on the right -->
            <div class="col-md-4">
				<div class="text-center">
					@*<img src="~/static/img/icons/logo.png" width="75%" />*@
                </div>
				<div class="pt-5">
					<div style="padding:8%">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <span>@TempData["Error"]!</span>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
						<form asp-controller="Account" asp-action="Login" method="post">
							<div asp-validation-summary="All"></div>
							<div class="form-group">
								<input asp-for="Username" placeholder="Username" class="form-control" required />
							</div><br />
							<div class="form-group">
								<input asp-for="Password" placeholder="Password" type="password" class="form-control" required />
							</div><br />

							<p class="text-center">
								<a asp-action="Apply" class="text-success" asp-controller="Admission">Apply for Admission</a>
							</p>
							<div class="form-goup">
								<button class="btn btn-primary form-control">Login</button>
							</div>
						</form>
					</div>
				</div>
                <p class="text-center blockquote-footer">&copy; Elevation Institute @DateTime.Now.Year</p>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
