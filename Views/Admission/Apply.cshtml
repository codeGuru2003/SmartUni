@{
	Layout = null;
	ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link rel="shortcut icon" href="~/static/img/icons/icon-48x48.png" />
	<link rel="canonical" href="https://demo-basic.adminkit.io/" />
	<title>Apply - SmartUni</title>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>

<body class="text-light" style="background:darkblue;">
	<div class="container">
		<div style="margin-top:6%; padding:20px;">
			<div class="row">
				<div class="col-md-6">
					<div style="padding:20px;">
						<h1>Apply for admission</h1>
						<p>Steps to apply for admission:</p>
						<ul>
							<li>Portal Token Provided by Admission's Office</li>
							<li>A Letter of Application (One Page & Handwritten)</li>
							<li>Autobiography (One Page & Handwritten)</li>
							<li>High School Transcript (Scanned Original Copy)</li>
							<li>Diploma (Scanned Original Copy)</li>
							<li>Health Certificate (From Benson Hospital)</li>
							<li>Two Letters of Reccommendation (From a Community/Church/Mosque and High School)</li>
							<li>Two Recent Passport Size Photos</li>
							<li>WASSCE/WAEC Certificate (Scanned Original Copy)</li>
						</ul>
					</div>
				</div>
				<div class="col-md-6" style="margin-top:10%;">
					<div class="card">
						<div class="card-body" style="padding:7%;">
							<form asp-action="Apply" asp-controller="Admission" method="post">
								<div class="form-group">
									<input type="password" name="token" class="form-control" placeholder="Enter voucher number..." required />
								</div>
								<br />
								<button class="btn btn-success form-control">Login</button>
							</form>
						</div>
					</div>
					<br />
					<a asp-action="Login" asp-controller="Account" class="btn btn-danger">Back</a>
				</div>
			</div>
		</div>
	</div>
	<br />
	<br />
	<br />
	<footer class="sticky-footer">
		<div class="container my-auto">
			<div class="copyright text-center my-auto">
				<span>&copy; SmartUniversity @DateTime.Now.Year  </span>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/static/js/app.js"></script>
</body>
</html>