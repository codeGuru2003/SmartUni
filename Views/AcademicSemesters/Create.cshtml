@model AcademicSemester
@{
    ViewData["Title"] = "Create";
}
<button class="btn btn-primary" href="#" data-toggle="modal" data-target="#academicSemesterModal">Create New</button>
<!-- Logout Modal-->
<div class="modal fade" id="academicSemesterModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Academic Semester</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="AcademicSemesters">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="AcademicYearId" type="hidden" />
                    <div class="form-group">
                        <label class="control-label">Semester</label>
                        @Html.DropDownList("SemesterId", (SelectList)ViewBag.SemesterId, "Select Semester", new { id = "semester", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="date" asp-for="StartDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>End Date</label>
                        <input type="date" asp-for="EndDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Is Active</label>
                        <input  asp-for="IsActive" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>